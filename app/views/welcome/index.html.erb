<h1>This is welcome index</h1>




<% if user_signed_in? %>
  <p>
    Welcome back <%= current_user.fb_name %>
    <% if current_user.fb_image.present? %>
      <%= image_tag(current_user.fb_image, size: "40") %>
    <% end %>
  </p>
<% end %>

<% if current_user %>
  <%= link_to('登出', destroy_user_session_path, :method => :delete) %>
<% end %>
